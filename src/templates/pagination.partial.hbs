<nav aria-label="Page navigation">
  <ul class="pagination">
    <li>
      <a href="?page={{prev pagination.current 1}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.items}}
    <li {{#if this.isCurrent}}class="active"{{/if}}>
      {{#if this.disabled}}
      <span>{{ this.page }}</span>
      {{else}}
      <a href="?page={{ this.page }}">{{ this.page }}</a>
      {{/if}}
    </li>
    {{/each}}
    <li>
      <a href="?page={{next pagination.current pagination.total}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
